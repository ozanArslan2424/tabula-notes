{
	"name": "kit",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"client": "bunx --bun vite",
		"client:build": "bunx --bun vite build",
		"server": "bun run --hot ./server/index.ts",
		"format": "prettier --write .",
		"db": "bunx drizzle-kit generate && bun run ./server/db/migrate.ts",
		"dev": "concurrently \"bun run client\" \"bun run server\"",
		"prod": "bun run format && bun run client:build && bun run server"
	},
	"dependencies": {
		"@radix-ui/react-alert-dialog": "^1.1.4",
		"@radix-ui/react-dialog": "^1.1.4",
		"@radix-ui/react-popover": "^1.1.4",
		"@radix-ui/react-tooltip": "^1.1.6",
		"@tailwindcss/typography": "^0.5.15",
		"@tailwindcss/vite": "4.0.0-beta.8",
		"@tanstack/react-query": "^5.62.14",
		"chokidar": "^4.0.3",
		"clsx": "^2.1.1",
		"dayjs": "^1.11.13",
		"drizzle-orm": "^0.38.3",
		"hono": "^4.6.15",
		"lodash.throttle": "^4.1.1",
		"lucide-react": "^0.469.0",
		"nodemailer": "^6.9.16",
		"react": "19.0.0",
		"react-dom": "19.0.0",
		"react-router": "7.1.1",
		"sonner": "^1.7.1",
		"tailwind-merge": "^2.5.5",
		"tailwindcss": "4.0.0-beta.8",
		"tailwindcss-animate": "^1.0.7",
		"watcher": "^2.3.1",
		"zod": "^3.24.1"
	},
	"devDependencies": {
		"@trivago/prettier-plugin-sort-imports": "^5.2.1",
		"@types/bun": "^1.1.14",
		"@types/nodemailer": "^6.4.17",
		"concurrently": "^9.1.2",
		"drizzle-kit": "^0.30.1",
		"prettier": "^3.4.2",
		"prettier-plugin-tailwindcss": "^0.6.9",
		"typescript": "^5.7.2",
		"@types/lodash.throttle": "^4.1.9",
		"@types/react": "19.0.2",
		"@types/react-dom": "19.0.2",
		"@vitejs/plugin-react": "^4.3.2",
		"vite": "^6.0.7"
	}
}
